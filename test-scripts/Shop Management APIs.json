							"pm.test(\"Shop details are correct\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property(\"id\", \"{{shopId}}\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
